---
apiVersion: v1
kind: Config
clusters:
- name: <%= p('kube.cluster.name') %>
  cluster:
    certificate-authority: /var/vcap/jobs/kube-node/config/certs/ca-cert.pem
users:
- name: kubelet
  user:
    client-certificate: /var/vcap/jobs/kube-node/config/certs/kubelet-cert.pem
    client-key: /var/vcap/jobs/kube-node/config/certs/kubelet-key.pem
contexts:
- context:
    cluster: <%= p('kube.cluster.name') %>
    user: kubelet
  name: kubelet-context
current-context: kubelet-context
