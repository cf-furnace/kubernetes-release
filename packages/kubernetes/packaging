#!/bin/bash
set -e -x

k8s_version=1.3.0

tar zxvf kubernetes/kubernetes-${k8s_version}.tar.gz kubernetes/server/kubernetes-server-linux-amd64.tar.gz
mv kubernetes/server/kubernetes-server-linux-amd64.tar.gz .

mkdir server
tar zxvf kubernetes-server-linux-amd64.tar.gz -C server

mkdir -p ${BOSH_INSTALL_TARGET}/bin
cp server/kubernetes/server/bin/hyperkube ${BOSH_INSTALL_TARGET}/bin
